@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="color-scheme" content="light dark">
	<title>@ViewData["Title"] - Project</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
	<nav class="py-2 bg-light border-bottom">
		<div class="container d-flex flex-wrap">
			<ul class="nav me-auto">
				<li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link link-dark px-2 active" aria-current="page">@Localizer["HomeLabel"]</a></li>
				<li class="nav-item"><a asp-controller="Home" asp-action="Users" class="nav-link link-dark px-2">@Localizer["UsersLabel"]</a></li>
			</ul>
			<ul class="nav">
				@if (User.Identity.IsAuthenticated)
				{
					<li class="nav-item">
						<div class="dropdown">
							<a href="#" class="nav-link d-flex align-items-center link-dark text-decoration-none dropdown-toggle px-2" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">@User.Identity.Name</a>
							<ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2" style="">
								<li><a class="dropdown-item" asp-controller="Home" asp-action="UserPage">@Localizer["ProfileLabel"]</a></li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<form class="d-flex flex-row" method="post" asp-controller="Account" asp-action="Logout">
										<button class="dropdown-item" type="submit">@Localizer["LogoutLabel"]</button>
									</form>
								</li>
							</ul>
						</div>
					</li>
				}
				else
				{
					<li class="nav-item"><a asp-controller="Account" asp-action="Login" class="nav-link link-dark px-2">@Localizer["LoginLabel"]</a></li>
				}
			</ul>
		</div>
	</nav>
	<header class="py-3 mb-4 border-bottom">
		<div class="container d-flex flex-wrap justify-content-center">
			<a href="/" class="d-flex align-items-center mb-3 mb-lg-0 me-lg-auto text-dark text-decoration-none">
				<span class="fs-4">Itransition Project</span>
			</a>
			<form method="get" asp-controller="Home" asp-action="SearchResults" class="col-12 col-lg-auto mb-3 mb-lg-0">
				<div class=" input-group d-flex justify-content-center">
					<input type="search" name="searchText" class="form-control mr-2" placeholder="@Localizer["SearchLabel"]" required aria-label="Search">
					<button type="submit" class="btn btn-outline-secondary">@Localizer["SearchButton"]</button>
				</div>

			</form>
		</div>
	</header>

	@RenderBody()
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>